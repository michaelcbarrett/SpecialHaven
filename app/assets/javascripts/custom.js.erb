$( document ).ready(function() {
	$(".optionPopUp").hide();
	
	$("#newpost").click(function(event){
		$(".optionPopUp").slideToggle();
	})
	document.getElementById("linkToText").onclick = function () {
        location.href = "<%=Rails.application.routes.url_helpers.new_text_post_path%>";
    };
    document.getElementById("linkToImage").onclick = function () {
        location.href = "<%=Rails.application.routes.url_helpers.new_image_post_path%>";
    };
 	document.getElementById("linkToVideo").onclick = function () {
        location.href = "<%=Rails.application.routes.url_helpers.new_video_post_path%>";
    };
    document.getElementById("linkToLink").onclick = function () {
        location.href = "<%=Rails.application.routes.url_helpers.new_link_post_path%>";
    };
});