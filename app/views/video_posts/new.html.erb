<style>
@import "bootstrap-sprockets";
@import "bootstrap";

/* mixins, variables, etc. */

$gray-medium-light: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}

/* universal */


section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}

.jumbotron {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 2em;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
}

h3 {
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #000;
  line-height: 0.1em;
  margin: 20px 0 30px;
} 

h3 span {
  background: #eeeeee;
  padding: 0 10px;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* buttons */

.fb-btn {
  background-color: #3B5998;
}

/* bootstrap */
.jumbotron {
  width: 500px;
  margin: auto;
}

/* header */

#logo {
  float: left;
  margin-right: 10px;
  padding-top: 9px;
}

/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}

/* flash */
.alert-error {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-alert {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }

.alert-notice {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }


/* timeline */



.timeline {
  list-style: none;
  padding: 0;

    .timeline-post {
      display: -webkit-flex;
      display: flex;
      padding: 10px;
      border-bottom: 1px solid #D0D0D0;
    }

  .post-timestamp {
    flex: 1;
    max-width: 70px;
    }
  .post-main {
    flex: 4;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
  }

  .post-title {
    flex: 1;
  }

  .post-body {
    -webkit-flex: 1;
            flex: 1;
  }
}

/* like button */

a.like-button{
  height: 14px;
  width: 14px;
}

.liked {
  color: rgba(255, 0, 0, 1);
}

.not-liked {
  color: rgba(255, 0, 0, 0.3);
}
</style>
<body>

<br><br><br>


<div class="container">
<%= form_for @post do |f|%>
<%= f.label :title %><br>
<%= f.text_field :title%><br>
<%= label_tag "Video URL"%>
<%= f.text_field :url%>
<%= f.label :body %><br>
<%= f.text_area :body %><br>
<%= select_tag :tag_list, options_for_select(@tag_options), id: "tag_list", multiple: true %><br><br>
<%= f.submit "Create Post" %>
<% end %>
</div>
</body>