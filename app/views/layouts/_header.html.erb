<%if user_signed_in?%>
<header>
    <div class="containerPage mobileMargin">
        <span class="floatLeft"><a href="<%=url_for root_path%>"><img class="logo" src="http://i.imgur.com/BZIQF3I.png" /></a></span>
        <span class="floatRight"><button class="postButton" id="newpost">NEW POST</button>         
            <img class="profilePic" src="http://i.imgur.com/BcMWkDq.jpg" />
            <span class="profileOptionSpan">
                <img class="profileOptions" src="http://i.imgur.com/CHfZqFg.png" />
                <img class="profileOptions" src="http://i.imgur.com/wHttvYx.png" />
                <a href='<%= link_to "Log Out", destroy_user_session_path, :method => 'delete'%>'><img class="profileOptions" src="http://i.imgur.com/8Mc7Wum.png" /></a>
            </span>
    </div>
</header>
<%else%>
<header>
    <div class="containerPage mobileMargin">
        <span class="floatLeft"><a href="<%=url_for root_path%>"><img class="logo" src="http://i.imgur.com/BZIQF3I.png" /></a></span>
        <a href="<%=new_user_session_path%>"><span class="floatRight login">SIGN IN</span></a>
        <span class="floatRight about">ABOUT</span>
        <a target="_blank" href="http://specialhaven.tumblr.com"><span class="floatRight about">BLOG</span></a>
    </div>
</header>
<%end%>
<div class="navSpacing"></div>

    <div class="optionPopUp">
        <div class="containerPopUp">
            <h1 class="textLeft thin darkGray centerMobile">Create New</h1>
            <br>
            <div class="section group hide">
                <div class="col span_3_of_12 lightGrayBg textCenter optionType" id="linkToText">
                    <img src="http://i.imgur.com/7RZZMUN.png" class="postType" />
                </div>
                <div class="col span_3_of_12 lightGrayBg textCenter optionType" id="linkToImage">
                    <img src="http://i.imgur.com/9Jmuht9.png" class="postType" />
                </div>
                <div class="col span_3_of_12 lightGrayBg textCenter optionType" id="linkToVideo">
                    <img src="http://i.imgur.com/O7Wn68V.png" class="postType" />
                </div>
                <div class="col span_3_of_12 lightGrayBg textCenter optionType" id="linkToLink">
                    <img src="http://i.imgur.com/Npo5KSH.png" class="postType" />
                </div>
            </div>
            <div class="section group">
                <div class="col span_3_of_12 textCenter textOptionType">
                    <a href="<%=Rails.application.routes.url_helpers.new_text_post_path%>"><h3 class="thin">TEXT POST</h3></a> 
                </div>
                <div class="col span_3_of_12 textCenter textOptionType">
                    <a href="<%=Rails.application.routes.url_helpers.new_image_post_path%>"><h3 class="thin">IMAGE POST</h3></a> 
                </div>
                <div class="col span_3_of_12 textCenter textOptionType">
                    <a href="<%=Rails.application.routes.url_helpers.new_video_post_path%>"><h3 class="thin">VIDEO POST</h3></a> 
                </div>
                <div class="col span_3_of_12 textCenter textOptionType">
                    <a href="<%=Rails.application.routes.url_helpers.new_link_post_path%>"><h3 class="thin">LINK POST</h3></a> 
                </div>
            </div>
        </div>
    </div>